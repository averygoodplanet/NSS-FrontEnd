extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader New
  .row
    .small-1.columns
      a(href='/').button.small.radius Home
    .small-1.columns
      a(href='/posts').button.small.radius Posts
    .small-1.columns
      a(href='/posts/new').button.small.radius.success New
    .small-9.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        fieldset
          legend New Movie
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'author', 'Author')
            mixin field(4, 'date', 'Date', date)
          .row
            mixin field(6, 'tags', 'Tag')
            mixin field(6, 'image', 'Image')
          .row
            .small-12.columns
              label(for='content') Content:
              textarea(name='content')#content
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Posts