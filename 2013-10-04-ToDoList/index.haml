!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Tasklist
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/qunit-theme-gabe.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    #inputWrapper
      %h1 Enter a Task:
      %label{for: 'dueDate'} Due Date
      %input#dueDate{type: 'text', placeholder: 'e.g. Next Wednesday'}
      %label#taskLabel{for: 'task'} Task
      %input#task{type: 'text', placeholder: 'e.g. walk the dog'}
      %label#colorLabel{for: 'colorInput'} Color
      %input#colorInput{type: 'text', placeholder: 'e.g. #cdcdcd, grey'}
      %input#addTask{type: 'button', value: 'Add Task!'}
    #taskListWrapper
      %h1 Tasklist
      %table
        %tr#headerRow
          %th Due Date
          %th#taskColumn Task
          %th Color
          %th Done?
          %th Remove?
          %th Up/Down





    %script{src: 'js/jquery-1.10.2.min.js'}
    %script{src: 'js/underscore-min.js'}
    %script{src: 'js/main.js'}
