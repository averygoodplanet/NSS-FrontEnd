!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title The Geek Bank
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/qunit-theme-gabe.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    %h1 The Geek Bank
    %img#logo
    #setLogoWrapper
      %input#url{type: 'text', placeholder: 'enter url for logo here'}
      %input#setLogo{type: 'button', value: 'Set Logo!'}
    #clear1
    %h3 Current Balance:
    %input#balanceDisplay{type: 'text', readonly: 'true'}
    #setBalanceWrapper
      %input#balanceInput{type: 'text', placeholder: 'enter initial Balance here'}
      %input#setBalance{type: 'button', value: 'Set Balance!'}
    #clear1
    %input#amount{type: 'text', placeholder: 'enter amount of deposit/withdrawal'}
    %input#deposit{type: 'button', value: 'Deposit!'}
    %input#withdraw{type: 'button', value: 'Withdraw!'}
    #clear1
    #transactions
      %h3 Transaction List
      #depositsColumn
        %h5 Deposits
      #withdrawalsColumn
        %h5 Withdrawals
      .clear


    %script{src: 'js/jquery-1.10.2.min.js'}
    %script{src: 'js/underscore-min.js'}
    %script{src: 'js/main.js'}
